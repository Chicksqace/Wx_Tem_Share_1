/**index.wxss**/
.top{
  width: 100%;
  margin:16rpx auto;
}
.top .input{
  border:3rpx solid #9c9c9c;
  border-radius: 15rpx;
  box-shadow:0px 0px 2px 2px #dddddd;
  padding: 10rpx 10rpx 10rpx 34rpx;
  width: 600rpx;
  margin: 0 auto;
  font-size: 30rpx;
  position: relative;
  letter-spacing: 3rpx;
  /* font-weight: 400; */
}
.search{
  position: absolute;
  width: 120rpx;
  padding-left: 20rpx;
  border-left: 1rpx solid #d0cecf;
  top: 30rpx;
  right: 70rpx;
  font-size: 28rpx;
  color: #c4c3c3;
}
.adjust{
  /* padding-top: 5rpx; */
}
.search image{
  width: 40rpx;
  height: 40rpx;
}
.search text{
  position: absolute;
}
.middle{
  width: 100%;
}
.middle-top{
  margin-top:6rpx;
  padding: 25rpx 0;
  width: 100%; 
  border: 1px solid #d0cecf;
  overflow: hidden;
}
.middle-top .img{
  padding-left:25rpx;
  overflow: hidden; 
}
.img-div{
  width: 125rpx;
  margin-right: 19rpx;
  font-size: 30rpx;
  text-align: center;
  float: left;
}
.middle-top image{
  width: 100rpx;
  height: 100rpx; 
}
.middle-top image:last-child{
  margin-right: 0;
}
/* slider */
.slider{
  width: 750rpx;
  height: 450rpx;
  margin: 15rpx 0;
}
swiper{
  width:750rpx;
  height: 450rpx;
}
.slide-image{
  width:750rpx;
  height: 450rpx;
}
/*middle-bottom */
.middle-bottom{
  margin-top:6rpx;
  width: 100%; 
  border-top: 1px solid #d0cecf;
  overflow: hidden;
  font-size:30rpx;
  text-align: center;
}
.left{
  width: 300rpx;
  float: left;
  padding-right: 40rpx;
  border-right: 1rpx solid #d0cecf;
  margin-left:35rpx; 
}
.left image,.right image{
  width: 300rpx;
  height: 250rpx;
  margin-top:25rpx; 
}
.right{
  width: 300rpx;
  float: left;
  margin-right:35rpx;
  padding-left: 40rpx;
}
